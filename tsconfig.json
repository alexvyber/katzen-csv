{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "allowJs": false,
    "rootDir": "src",
    "module": "ESNext",
    "target": "es2019",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "lib": ["ES6", "DOM", "ES2019"],
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
